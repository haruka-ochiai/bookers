<div>
    <%= flash[:notice] %>
</div>

<h1 class="top_title">Books</h1>


<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>
    
        <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', "/books/#{book.id}" %></td>
        <td><%= link_to 'Edit', "/books/#{book.id}/edit" %></td>
        <td><%= link_to 'Destroy', "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
        <% end %>
     

</table>

<h3>New Book</h3>

<% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div class="new_book">
        <p>Title</p>
        <%= f.text_field :title %>
    
        <p>Body</p>
        <%= f.text_area :body %>
    
        <div class="button"><%= f.submit 'Create Book' %></div>
    </div>
   
<% end %>